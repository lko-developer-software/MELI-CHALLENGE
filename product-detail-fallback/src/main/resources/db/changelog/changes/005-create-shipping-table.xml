<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="005-create-shipping-table" author="system">
        <createTable tableName="shipping">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_product_detail" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="free_shipping" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="logistic_type" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="mode" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint 
            constraintName="fk_shipping_product_detail"
            baseTableName="shipping"
            baseColumnNames="id_product_detail"
            referencedTableName="product_detail"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>