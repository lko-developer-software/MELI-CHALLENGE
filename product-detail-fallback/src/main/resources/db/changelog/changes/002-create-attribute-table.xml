<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="002-create-attribute-table" author="system">
        <createTable tableName="attribute">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_product_detail" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="value_name" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint 
            constraintName="fk_attribute_product_detail"
            baseTableName="attribute"
            baseColumnNames="id_product_detail"
            referencedTableName="product_detail"
            referencedColumnNames="id"
            onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>